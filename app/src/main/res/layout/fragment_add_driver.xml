<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.AddDriver">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <EditText
        android:id="@+id/DriverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />

    <EditText
        android:id="@+id/DriverEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CNIC" />

    <EditText
        android:id="@+id/DriverCnic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cnic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact" />

    <EditText
        android:id="@+id/DriverContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address" />

    <EditText
        android:id="@+id/DriverAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allocate Van" />

    <Spinner
        android:id="@+id/spinnerVan_Driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <Button
        android:id="@+id/btn_DriverInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add Driver" />

</LinearLayout>