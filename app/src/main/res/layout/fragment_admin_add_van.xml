<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin20dp">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Van"
        android:textSize="25sp"/>

    <TextView
        android:layout_marginTop="@dimen/margin10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Van Name" />

    <EditText
        android:id="@+id/VanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g Suzuki Bolan " />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Van Model" />

    <EditText
        android:id="@+id/VanModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g 2010" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Van Number" />

    <EditText
        android:id="@+id/VanNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g Rix 0000" />
    <Button
        android:id="@+id/btn_AddVan"
        android:layout_gravity="center"
        android:text="Add Van Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>