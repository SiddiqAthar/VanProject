<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/spinner_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin10dp"
         android:textColor="@color/button_pressed"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/spinner_item_tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
          android:gravity="center_vertical"
        android:paddingEnd="@dimen/margin10dp"
        android:textColor="@color/button_pressed"
        android:textSize="15sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/spinner_item_tv"
        android:layout_marginTop="3dp"
        android:background="@color/textColor" />

</RelativeLayout>